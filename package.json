    "dotenv-defaults": "^5.0.2",
    "mqtt": "^5.3.5"
  },
  "devDependencies": {
    "@types/dotenv-defaults": "^2.0.4",
    "@types/node": "^20.11.8",
    "events": "^3.3.0",
    "nodemon": "^3.0.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
