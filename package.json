{
  "name": "hass-bot",
  "version": "1.0.0",
  "description": "Home Assistant Discord.js Integration on Docker",
  "author": "kariudo",
  "repository": {
    "type": "git",
    "url": "https://github.com/kariudo/addon-discord_bot"
  },
  "main": "server.js",
  "scripts": {
    "clean": "rimraf ./build",
